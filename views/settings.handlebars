<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Update Contact Info</h2>
        <form action="/api/updateContact?_method=PUT" method="POST" class="form">
          <div class="form-group">
            <label for="first_name">First Name</label>
            <input name="first_name" type="text" class="form-control" id="first_name" value="{{contact.first_name}}" required="true">
          </div>
          <div class="form-group">
            <label for="middle_name">Middle Name</label>
            <input name="middle_name" type="text" class="form-control" id="middle_name" value="{{contact.middle_name}}">
          </div>
          <div class="form-group">
            <label for="last_name">Last Name</label>
            <input name="last_name" type="text" class="form-control" id="last_name" value="{{contact.last_name}}">
          </div>
          <div class="form-group">
            <label for="addr_number">Street Number</label>
            <input name="addr_number" type="number" min="1" max="9999999" class="form-control" id="addr_number" value="{{contact.addr_number}}">
          </div>
          <div class="form-group">
            <label for="addr_street">Street Name</label>
            <input name="addr_street" type="text" class="form-control" id="addr_street" value="{{contact.addr_street}}">
          </div>
          <div class="form-group">
            <label for="apt_number">Apt. Number</label>
            <input name="apt_number" type="text" class="form-control" id="apt_number" value="{{contact.apt_number}}">
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input name="city" type="text" class="form-control" id="city" value="{{contact.city}}">
          </div>
          <div class="form-group">
            <label for="state">State</label>
            <select class="state form-control" name="state" id="state" value="{{contact.state}}">
              <option>Select One</option>
              <option value="AZ">Arizona (AZ)</option>
              <option value="CA">California (CA)</option>
              <option value="NV">Nevada (NV)</option>
            </select>
          </div>
          <div class="form-group">
            <label for="zip_code">Zip</label>
            <input name="zip_code" type="number" class="form-control" id="zip_code" value="{{contact.zip_code}}">
          </div>
          <div class="form-group">
            <label for="phone_number">Phone Number</label>
            <input name="phone_number" type="tel" class="form-control" id="phone_number" value="{{contact.phone_number}}">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <p>
          Please fill all required fields to continue. <a href="/completeLogin">Cancel</a>
        </p>
      </div>
    </div>
  </div>
</div>
